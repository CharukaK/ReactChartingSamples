{
    "$schema": "https://vega.github.io/schema/vega/v3.0.json",
    "width": 500,
    "height": 200,
    "padding":5,
    "data": [
        {"name": "table"}
    ],
    "scales": [
        {
            "name": "x",
            "type": "point",
            "range":"width",
            "domain":{
                "data": "table","field":"rpm"
            }
        },
        {
            "name": "y",
            "type": "linear",
            "range":"height",
            "domain":{
                "data": "table","field":"torque"
            }
        },
        {
            "name": "color",
            "type": "ordinal",
            "range":"category",
            "domain":{
                "data": "table","field":"type"
            }
        }
        
    ],
    "axes": [
        {
            "orient": "bottom","scale": "x"
        },
        {
            "orient": "left","scale": "y"
        }
    ],
    "marks": [
        {
            "type": "group",
            "from":{
                "facet":{
                    "name": "series",
                    "data": "table",
                    "groupby":"type"
                }
            },
            "marks": [
                {
                    "type": "line",
                    "from": {
                        "data": "series"
                    },
                    "encode": {
                        "enter":{
                            "x":{"scale":"x","field":"x"},
                            "y":{"scale":"y","field":"x"}
                        }
                    }
                }
            ]
        }
        
    ]
}